<h2>Lists</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= link_to "Show", list %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
      <td><%= link_to "Delete", list_path(list), :method => :delete,
        :confirm => "Are you sure you want to delete?" %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New List", new_list_path %>